<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mIvIcon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_no_network"
        app:layout_constraintBottom_toTopOf="@+id/mTvTitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:lines="1"
        android:text="出现了点小问题"
        android:textColor="@color/colorGray999"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/mBtnReload"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mIvIcon" />

    <com.noober.background.view.BLTextView
        android:id="@+id/mBtnReload"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/cmn_ui_primary_color"
        app:bl_corners_radius="2dp"
        app:bl_pressed_solid_color="@color/colorGrayccc_3"
        app:bl_stroke_color="@color/cmn_ui_primary_color"
        app:bl_stroke_width="1dp"
        app:bl_unPressed_solid_color="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
        app:layout_goneMarginTop="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>