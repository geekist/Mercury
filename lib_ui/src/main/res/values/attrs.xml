<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomRoundNavigation">
        <!-- 底部导航栏的高度(不包括阴影的高度和凸起的高度) -->
        <attr name="brn_tab_height" format="dimension" />
        <!-- 图标大小 -->
        <attr name="brn_icon_size" format="dimension" />
        <!-- 导航栏背景颜色 -->
        <attr name="brn_background_color" format="color" />
        <!-- 是否需要导航栏中间突出 -->
        <attr name="brn_is_linear" format="boolean" />
        <!-- 导航栏中间突出宽度 -->
        <attr name="brn_bezier_width" format="dimension" />
        <!-- 导航栏中间突出高度 -->
        <attr name="brn_bezier_height" format="dimension" />
        <!-- 导航栏阴影大小 -->
        <attr name="brn_shadow_radius" format="dimension" />
        <!-- 导航栏阴影颜色 -->
        <attr name="brn_shadow_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="tb_toolbar_height" format="dimension" />
        <!-- 中间的布局 -->
        <attr name="tb_center_layout" format="reference" />
        <attr name="tb_center_layout_match" format="boolean" />
        <!-- 位于ToolBar下方 -->
        <attr name="tb_compose_layout" format="reference" />
        <!-- 背景颜色 -->
        <attr name="tb_bg_color" format="color" />
        <!-- 标题栏做渐变的时候最终真实的背景色 -->
        <attr name="tb_actual_bg_color" format="color" />
        <attr name="tb_menu_color" format="color" />
        <!-- 效果和tb_actual_bg_color属性类似 -->
        <attr name="tb_actual_menu_color" format="color" />
        <attr name="tb_title" format="string" />
        <attr name="tb_title_color" format="color" />
        <attr name="tb_actual_title_color" format="color" />
        <attr name="tb_title_size" format="dimension" />
        <attr name="tb_nav_icon" format="reference" />
        <attr name="tb_nav_icon_tint" format="color" />
        <attr name="tb_show_center_title" format="boolean" />
        <attr name="tb_show_start_title" format="boolean" />
        <attr name="tb_show_bold_title" format="boolean" />
        <attr name="tb_show_divider" format="boolean" />
        <attr name="tb_immersive_bar_support" format="boolean" />
        <!-- 是否开启 -->
        <attr name="tb_enable_tint" format="boolean" />
        <attr name="tb_layout_scrollFlags" format="integer">
            <flag name="scroll" value="1" />
            <flag name="snap" value="16" />
            <flag name="enterAlways" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CollapsingTitleBar">
        <!-- 位于ToolBar下方 -->
        <attr name="ctb_compose_layout" format="reference" />
        <attr name="ctb_collapsing_layout" format="reference" />
        <!-- 中间的布局 -->
        <attr name="ctb_center_layout" format="reference" />
        <attr name="ctb_center_layout_match" format="boolean" />
        <!-- 背景颜色 -->
        <attr name="ctb_bg_color" format="color" />
        <attr name="ctb_actual_bg_color" format="color" />
        <attr name="ctb_menu_color" format="color" />
        <attr name="ctb_actual_menu_color" format="color" />
        <attr name="ctb_title" format="string" />
        <attr name="ctb_title_color" format="color" />
        <attr name="ctb_actual_title_color" format="color" />
        <attr name="ctb_title_size" format="dimension" />
        <attr name="ctb_nav_icon" format="reference" />
        <attr name="ctb_nav_icon_tint" format="color" />
        <attr name="ctb_actual_nav_icon_tint" format="color" />
        <attr name="ctb_show_divider" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MultipleStatusLayout">
        <!-- 图标 -->
        <attr name="msl_icon" format="reference" />
        <!-- 标题文本 -->
        <attr name="msl_title" format="string" />
        <!-- 副标题文本 -->
        <attr name="msl_sub_title" format="string" />
        <!-- 按钮文本 -->
        <attr name="msl_action_text" format="string" />
        <!-- 内容布局 -->
        <attr name="msl_content_layout" format="reference" />
        <attr name="msl_status">
            <enum name="content" value="1" />
            <enum name="error" value="2" />
            <enum name="loading" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TypefaceTextView">
        <attr name="typeface" format="string" />
    </declare-styleable>

    <declare-styleable name="PressedConstraintLayout">
        <!-- 左上右下的圆角 -->
        <attr name="pcl_corner_radius" format="dimension" />
        <!-- 左上的圆角 -->
        <attr name="pcl_corner_radius_lt" format="dimension" />
        <!-- 左下的圆角 -->
        <attr name="pcl_corner_radius_lb" format="dimension" />
        <!-- 右上的圆角 -->
        <attr name="pcl_corner_radius_rt" format="dimension" />
        <!-- 右下的圆角 -->
        <attr name="pcl_corner_radius_rb" format="dimension" />
        <!-- 阴影 -->
        <attr name="pcl_shadow_radius" format="dimension" />
        <!-- ShadowLayout的背景颜色 -->
        <attr name="pcl_bg_color" format="color" />
        <!-- ShadowLayout按下的背景颜色 -->
        <attr name="pcl_press_bg_color" format="color" />
        <!-- 是否开启按下改变背景颜色 -->
        <attr name="pcl_enable_press" format="boolean" />
    </declare-styleable>
</resources>